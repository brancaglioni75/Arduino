/* Aprenderemos sobre as portas PWM (Pulse Width Modulation)
para isso o arduino possui 6 portas PWM*/

#define led 3
#define maximo 16 // Valor máximo. A porta PMW vai até 255, pois é uma porta de 8 bits ou 2^8 cujo resultado é 255
#define minimo 0
#define tmp 100 // Definição de tempo utilizando #define

void setup(){
pinMode(led, OUTPUT);

}

void loop(){
  for(int i = minimo; i < maximo; i++){
    analogWrite(led, i);// Método analogWrite usado para portas PWM
    delay(tmp);
  }
  
  for(int i = maximo; i > minimo;i--){
    analogWrite(led, i);
    delay(tmp);
  }
}
